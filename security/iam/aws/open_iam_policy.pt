escalation "alert_aws" do
   email $escalate_to
end

policy "iam_policies" do
  validate_each $ds_readable_document do
    summary_template "IAM Policies Found in AWS"
    detail_template <<-EOS
# Policies Found in AWS
| Policy Name |  
| ----------- |  
{{ range data -}}
| {{.name}} |  
{{ end -}}
EOS
    escalate $alert_aws
    check eq(1,0)
  end
end
